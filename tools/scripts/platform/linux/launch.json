    "version": "0.2.0",
    "configurations": [
            {
                    "name": "(gdb) Launch",
                    "type": "cppdbg",
                    "request": "launch",
                    "program": "program.out",
                    "args": [],
                    "stopAtEntry": true,
                    "cwd": "build_dir",
                    "environment": [],
                    "MIMode": "gdb",
                    "setupCommands": [
                            {
                                    "description": "Enable pretty-printing for gdb",
                                    "text": "-enable-pretty-printing",
                                    "ignoreFailures": true
                            }
                    ]
            }
    ]
}