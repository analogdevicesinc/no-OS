{
    "version": 8,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 28,
        "patch": 0
    },
    "comment": "ADXL355 PMDZ project presets - supports: maxim, stm32, aducm3029, pico (no linux/xilinx)",

    "configurePresets": [
        {
            "name": "default",
            "description": "Default config",
            "generator": "Unix Makefiles"
        },
        {
            "name": "max78000_fthr",
            "displayName": "MAX78000 Feather",
            "description": "MAX78000 feather board - auto-detects FetchContent vs local no-OS",
            "inherits": "default",
            "cacheVariables": {
                "BOARD": "MAX78000_FTHR",
                "USE_VENDOR_TOOLCHAIN": "OFF",
                "PLATFORM": "maxim",
                "TARGET": "max78000",
                "TARGET_NUM": "78000",
                "BOARD_CONFIG_FILE": "max78000_fthr_defconfig"
            }
        },
        {
            "name": "max32650_fthr",
            "displayName": "MAX32650 Feather",
            "description": "MAX32650 feather board - auto-detects FetchContent vs local no-OS",
            "inherits": "default",
            "cacheVariables": {
                "BOARD": "MAX32650_FTHR",
                "USE_VENDOR_TOOLCHAIN": "ON",
                "PLATFORM": "maxim",
                "TARGET": "max32650",
                "TARGET_NUM": "32650",
                "BOARD_CONFIG_FILE": "max32650_fthr_defconfig"
            }
        },
        {
            "name": "apard32690",
            "displayName": "APARD32690",
            "description": "APARD32690 board - auto-detects FetchContent vs local no-OS",
            "inherits": "default",
            "cacheVariables": {
                "BOARD": "APARD32690",
                "USE_VENDOR_TOOLCHAIN": "ON",
                "PLATFORM": "maxim",
                "TARGET": "max32690",
                "TARGET_NUM": "32690",
                "BOARD_CONFIG_FILE": "apard32690_defconfig"
            }
        },
        {
            "name": "stm32f756_nucleo",
            "displayName": "STM32F756 Nucleo",
            "description": "STM32F756 Nucleo board - auto-detects FetchContent vs local no-OS",
            "inherits": "default",
            "cacheVariables": {
                "BOARD": "sdp-ck1z",
                "USE_VENDOR_TOOLCHAIN": "OFF",
                "PLATFORM": "stm32",
                "TARGET": "stm32f756",
                "TARGET_NUM": "stm32f756",
                "BOARD_CONFIG_FILE": "stm32f756_nucleo_defconfig"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "dummy",
            "displayName": "ADXL355 Dummy Example",
            "description": "Build the dummy example application",
            "targets": ["eval-adxl355-pmdz-dummy"]
        },
        {
            "name": "iio",
            "displayName": "ADXL355 IIO Example",
            "description": "Build the IIO example application",
            "targets": ["eval-adxl355-pmdz-iio"]
        },
        {
            "name": "iio_trigger",
            "displayName": "ADXL355 IIO Trigger Example",
            "description": "Build the IIO trigger example application",
            "targets": ["eval-adxl355-pmdz-iio-trigger"]
        },
        {
            "name": "all",
            "displayName": "All ADXL355 Examples",
            "description": "Build all example applications",
            "targets": ["eval-adxl355-pmdz"]
        }
    ]
}