menuconfig MAXIM
	bool "Maxim Platform Drivers"
	depends on !MAXIM_CAPI
	default n
	help
	  Enable support for Maxim platform drivers.

	  This section contains low-level platform drivers for Maxim
	  microcontrollers including GPIO, SPI, I2C, UART, PWM, DMA,
	  interrupt handling, USB UART, RTC, Timer, and other peripheral
	  drivers across multiple Maxim chip families.

if MAXIM

config GPIO_MAXIM
	bool "Enable Maxim GPIO driver"
	depends on GPIO
	default n
	help
	  Enable Maxim-specific GPIO driver implementation.

config GPIO_IRQ_MAXIM
	bool "Enable Maxim GPIO IRQ driver"
	depends on GPIO && IRQ
	default n
	help
	  Enable Maxim-specific GPIO interrupt driver implementation.

config I2C_MAXIM
	bool "Enable Maxim I2C driver"
	depends on I2C
	default n
	help
	  Enable Maxim-specific I2C driver implementation.

config SPI_MAXIM
	bool "Enable Maxim SPI driver"
	depends on SPI
	default n
	help
	  Enable Maxim-specific SPI driver implementation.

config UART_MAXIM
	bool "Enable Maxim UART driver"
	depends on UART
	default n
	help
	  Enable Maxim-specific UART driver implementation.

config UART_STDIO_MAXIM
	bool "Enable Maxim UART STDIO driver"
	depends on UART
	default n
	help
	  Enable Maxim-specific UART STDIO driver implementation.

config USB_UART_MAXIM
	bool "Enable Maxim USB UART driver"
	default n
	help
	  Enable Maxim-specific USB UART driver implementation.
	  Platform-specific USB UART functionality.

config IRQ_MAXIM
	bool "Enable Maxim IRQ driver"
	depends on IRQ
	default n
	help
	  Enable Maxim-specific interrupt handling driver.

config PWM_MAXIM
	bool "Enable Maxim PWM driver"
	depends on PWM
	default n
	help
	  Enable Maxim-specific PWM driver implementation.
	  Requires CONFIG_PWM=y to be enabled.

config TIMER_MAXIM
	bool "Enable Maxim Timer driver"
	depends on TIMER
	default n
	help
	  Enable Maxim-specific Timer driver implementation.
	  Requires CONFIG_TIMER=y to be enabled.

config RTC_MAXIM
	bool "Enable Maxim RTC driver"
	depends on RTC
	default n
	help
	  Enable Maxim-specific RTC driver implementation.
	  Requires CONFIG_RTC=y to be enabled.

config TRNG_MAXIM
	bool "Enable Maxim TRNG driver"
	depends on TRNG
	default n
	help
	  Enable Maxim-specific TRNG (True Random Number Generator) driver.
	  Requires CONFIG_TRNG=y to be enabled.

config DMA_MAXIM
	bool "Enable Maxim DMA driver"
	depends on DMA
	default n
	help
	  Enable Maxim-specific DMA driver implementation.

endif # MAXIM

menuconfig MAXIM_CAPI
	bool "CAPI Maxim Platform Drivers"
	default n
	help
	  Enable support for CAPI Maxim platform drivers.

	  Use the CAPI platform drivers in addition to or instead of
	  the traditional no-OS drivers. 

if MAXIM_CAPI

config CAPI_UART_MAXIM
	bool "Enable Maxim UART driver"
	depends on UART
	default n
	help
	  Enable Maxim-specific UART driver implementation.

config CAPI_UART_STDIO_MAXIM
	bool "Enable Maxim UART STDIO driver"
	depends on CAPI_UART_MAXIM
	default n
	help
	  Enable Maxim-specific UART STDIO driver implementation for CAPI.

	  This redirects printf/scanf to use CAPI UART instead of
	  the traditional no-OS UART API.

config CAPI_GPIO_MAXIM
	bool "Enable Maxim GPIO driver"
	depends on GPIO
	default n
	help
	  Enable Maxim-specific GPIO driver implementation.

config CAPI_TIMER_MAXIM
	bool "Enable Maxim Timer driver"
	depends on TIMER
	default n
	help
	  Enable Maxim-specific Timer driver implementation for CAPI.

	  This provides timer functionality including counter operations,
	  compare/capture modes, PWM generation, and interrupt handling
	  through the CAPI timer interface.

config CAPI_I2C_MAXIM
	bool "Enable Maxim I2C driver"
	depends on I2C
	default n
	help
	  Enable Maxim-specific I2C driver implementation for CAPI.

	  This provides I2C functionality including synchronous and
	  asynchronous transfers, initiator and target modes, and
	  interrupt handling through the CAPI I2C interface.

config CAPI_SPI_MAXIM
	bool "Enable Maxim SPI driver"
	depends on SPI
	default n
	help
	  Enable Maxim-specific SPI driver implementation for CAPI.

	  This provides SPI functionality including synchronous and
	  asynchronous transfers, multiple SPI modes, chip select control,
	  and interrupt handling through the CAPI SPI interface.

config CAPI_DMA_MAXIM
	bool "Enable Maxim DMA driver"
	depends on DMA
	default n
	help
	  Enable Maxim-specific DMA driver implementation for CAPI.

	  This provides DMA functionality including memory-to-memory,
	  memory-to-device, and device-to-memory transfers with
	  interrupt handling through the CAPI DMA interface.

config CAPI_PINCTRL_MAXIM
	bool "Enable Maxim PIN Control driver"
	default n
	help
	  Enable Maxim-specific pin control driver implementation for CAPI.

	  This provides pin control functionality including pin multiplexing,
	  pad configuration (pull-up/pull-down), voltage selection, and
	  drive strength control for MAX32655 and compatible devices
	  through the CAPI pinctrl interface.

endif