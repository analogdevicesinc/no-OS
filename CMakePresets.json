{
        "version": 8,
        "cmakeMinimumRequired": {
                "major": 3,
                "minor": 28,
                "patch": 0
        },

        "configurePresets": [
                {
                        "name": "default",
                        "description": "Default config",
                        "generator": "Unix Makefiles"
                },
                {
                        "name": "max78000_fthr",
                        "description": "MAX78000 feather board (auto-detects in-tree/out-of-tree)",
                        "inherits": "default",
                        "cacheVariables": {
                                "BOARD": "max78000_fthr",
                                "USE_VENDOR_TOOLCHAIN": "OFF",
                                "PLATFORM": "maxim",
                                "TARGET": "max78000",
                                "TARGET_NUM": "78000",
                                "BOARD_CONFIG_FILE": "max78000_fthr_defconfig"
                        }
                },
                {
                        "name": "max32650_fthr",
                        "description": "MAX32650 feather board (auto-detects in-tree/out-of-tree)",
                        "inherits": "default",
                        "cacheVariables": {
                                "BOARD": "max32650_fthr",
                                "USE_VENDOR_TOOLCHAIN": "ON",
                                "PLATFORM": "maxim",
                                "TARGET": "max32650",
                                "TARGET_NUM": "32650",
                                "BOARD_CONFIG_FILE": "max32650_fthr_defconfig"
                        }
                },
                {
                        "name": "apard32690",
                        "description": "APARD32690 board (auto-detects in-tree/out-of-tree)",
                        "binaryDir": "${sourceDir}/build",
                        "inherits": "default",
                        "cacheVariables": {
                                "BOARD": "apard32690",
                                "USE_VENDOR_TOOLCHAIN": "ON",
                                "PLATFORM": "maxim",
                                "TARGET": "max32690",
                                "TARGET_NUM": "32690",
                                "BOARD_CONFIG_FILE": "apard32690_defconfig"
                        }
                },
                {
                        "name": "stm32f756_nucleo",
                        "description": "STM32F756 Nucleo board (auto-detects in-tree/out-of-tree) - NOT compatible with ftc_workshop",
                        "inherits": "default",
                        "cacheVariables": {
                                "BOARD": "stm32f756_nucleo",
                                "USE_VENDOR_TOOLCHAIN": "OFF",
                                "PLATFORM": "stm32",
                                "TARGET": "stm32f756",
                                "TARGET_NUM": "stm32f756",
                                "BOARD_CONFIG_FILE": "stm32f756_nucleo_defconfig"
                        }
                }
        ],
        "buildPresets": [
                {
                        "name": "default",
                        "displayName": "Project Blinky (for apard32690)",
                        "configurePreset": "apard32690",
                        "targets": [ "no-os" ]
                },
                {
                        "name": "iio_demo",
                        "displayName": "IIO Demo Project",
                        "description": "Build IIO Demo project (supports: maxim, stm32, aducm3029, pico, linux, xilinx)",
                        "inherits": "default",
                        "targets": [ "iio_demo" ]
                },
                {
                        "name": "eval_adxl355_pmdz_dummy",
                        "displayName": "ADXL355 Dummy Example",
                        "description": "Build ADXL355 dummy example (supports: maxim, stm32, aducm3029, pico)",
                        "inherits": "default",
                        "targets": [ "eval-adxl355-pmdz-dummy" ]
                },
                {
                        "name": "eval_adxl355_pmdz_iio",
                        "displayName": "ADXL355 IIO Example",
                        "description": "Build ADXL355 IIO example (supports: maxim, stm32, aducm3029, pico)",
                        "inherits": "default",
                        "targets": [ "eval-adxl355-pmdz-iio" ]
                },
                {
                        "name": "eval_adxl355_pmdz_iio_trigger",
                        "displayName": "ADXL355 IIO Trigger Example",
                        "description": "Build ADXL355 IIO trigger example (supports: maxim, stm32, aducm3029, pico)",
                        "inherits": "default",
                        "targets": [ "eval-adxl355-pmdz-iio-trigger" ]
                },
                {
                        "name": "eval_adxl355_pmdz_all",
                        "displayName": "All ADXL355 Examples",
                        "description": "Build all ADXL355 examples (supports: maxim, stm32, aducm3029, pico)",
                        "inherits": "default",
                        "targets": [ "eval-adxl355-pmdz" ]
                },
                {
                        "name": "ftc_workshop",
                        "displayName": "FTC Workshop Project",
                        "description": "Build FTC Workshop project (supports: maxim ONLY)",
                        "inherits": "default",
                        "targets": [ "ftc_workshop" ]
                }
        ],
        "workflowPresets": [
                {
                        "name": "build-no-os",
                        "displayName": "Configure and Build Blinky for Board Alpha",
                        "steps": [
                                {
                                        "type": "configure",
                                        "name": "apard32690"
                                },
                                {
                                        "type": "build",
                                        "name": "default"
                                }
                        ]
                }
        ]
}